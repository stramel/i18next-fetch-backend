{
  "name": "i18next-fetch-backend",
  "version": "2.2.0",
  "description": "backend layer for i18next using browsers fetch",
  "author": "Julian Grinblat <julian@dotcore.co.il>",
  "homepage": "https://github.com/perrin4869/i18next-fetch-backend#readme",
  "license": "MIT",
  "keywords": [
    "i18next",
    "i18next-backend"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perrin4869/i18next-fetch-backend.git"
  },
  "bugs": {
    "url": "https://github.com/perrin4869/i18next-fetch-backend/issues"
  },
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.js\"",
    "lint:fix": "npm run lint -s -- --fix || true",
    "build": "pack build",
    "test": "tsc && ava",
    "cover": "nyc --reporter=lcov --reporter=text-summary npm test",
    "coveralls": "npm run cover && nyc report --reporter=text-lcov | coveralls",
    "publish-pkg": "pack publish",
    "format": "npm run lint:fix && prettier --write \"{src,test}/**/*.{js,ts,json}\""
  },
  "dependencies": {},
  "peerDependencies": {
    "i18next": "^15.1.2"
  },
  "devDependencies": {
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-umd": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-ts-standard-pkg": "^0.4.0",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "ava": "^1.4.1",
    "create-test-server": "^3.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "esm": "^3.2.25",
    "husky": "^2.3.0",
    "i18next": "^15.1.2",
    "isomorphic-fetch": "^2.2.1",
    "lint-staged": "^8.1.7",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "typescript": "^3.5.0-rc"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-umd",
        {
          "name": "i18next-fetch-backend"
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "esm",
      "isomorphic-fetch"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
